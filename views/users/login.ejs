<%layout('layouts/boilerplate')%>

<div class="container">
  <h1>
    <center>Login</center>
  </h1>

  <form href="/login" method="POST">
    <div class="m-2">
      <label for="userId">User ID :</label>
      <input type="text" name="userID" required="required" />
    </div>

    <div class="m-2">
      <label for="password">Password :</label>
      <input type="password" name="password" required="required" />
    </div>
    <a id="backButton" class="btn border rounded bg-secondary m-2" href="/"
      >Back</a
    >
    <button type="submit" class="btn border rounded bg-success text-white">
      Confirm
    </button>
  </form>
</div>
