<%layout('layouts/boilerplate')%>

<div
  class="container d-flex align-items-center justify-content-center flex-column vw-100 vh-100"
>
  <h1>Register</h1>
  <form action="/register" method="post">
    <div class="m-2">
      <label for="name">Name :</label>
      <input type="text" name="name" required="required" />
    </div>

    <div class="m-2">
      <label for="userId">User ID :</label>
      <input type="text" name="userId" required="required" />
    </div>

    <div class="m-2">
      <label for="phoneNumber">Phone Number :</label>
      <input type="text" name="phoneNumber" required="required" />
    </div>

    <div class="m-2">
      <label for="password">Password :</label>
      <input type="password" name="password" required="required" />
    </div>
    <a id="backButton" class="btn border border-black m-2" href="/">Back</a>
    <button type="submit" value="Confirm" class="btn border border-black m-2">
      Confirm
    </button>
  </form>
</div>
