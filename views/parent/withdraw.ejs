<%layout('layouts/boilerplate')%>

<div class="container border p-4 my-4">
  <h1 class="mb-4 text-center">Withdraw</h1>
  <form
    action="/parent/withdraw"
    method="POST"
    class="text-center needs-validation"
    novalidate
  >
    <div class="mb-3 row justify-content-center">
      <label for="amount" class="col-md-2 col-form-label">Enter amount:</label>
      <div class="col-md-6">
        <input
          type="text"
          class="form-control"
          id="amount"
          name="amount"
          required
        />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="bankName" class="col-md-2 col-form-label"
        >Enter bank name:</label
      >
      <div class="col-md-6">
        <input type="text" class="form-control" id="bankName" name="bankName" />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="accountNumber" class="col-md-2 col-form-label"
        >Enter account number:</label
      >
      <div class="col-md-6">
        <input
          type="text"
          class="form-control"
          id="accountNumber"
          name="accountNumber"
        />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="accountHolderName" class="col-md-2 col-form-label"
        >Enter account holder name:</label
      >
      <div class="col-md-6">
        <input
          type="text"
          class="form-control"
          id="accountHolderName"
          name="accountHolderName"
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary mb-3">Submit Withdraw</button>
  </form>
  <div class="text-center">
    <a class="btn btn-secondary" href="/"> Back to Parent Portal </a>
  </div>
</div>
