<%layout('layouts/boilerplate')%>

<div class="container border p-4 my-4">
  <h1 class="mb-4 text-center">Withdraw</h1>
  <div class="text-center">
    <div class="mb-3 row justify-content-center">
      <label for="amount" class="col-md-2 col-form-label">Enter amount:</label>
      <div class="col-md-6">
        <input type="text" class="form-control" id="amount" />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="bankName" class="col-md-2 col-form-label"
        >Enter bank name:</label
      >
      <div class="col-md-6">
        <input type="text" class="form-control" id="bankName" />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="accountNumber" class="col-md-2 col-form-label"
        >Enter account number:</label
      >
      <div class="col-md-6">
        <input type="text" class="form-control" id="accountNumber" />
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <label for="accountHolderName" class="col-md-2 col-form-label"
        >Enter account holder name:</label
      >
      <div class="col-md-6">
        <input type="text" class="form-control" id="accountHolderName" />
      </div>
    </div>

    <button class="btn btn-primary mb-3" onclick="submitWithdraw()">
      Submit Withdraw
    </button>
  </div>
  <div class="text-center">
    <a class="btn btn-secondary" href="/"> Back to Parent Portal </a>
  </div>
</div>
